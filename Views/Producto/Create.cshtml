@model Tarea3Brandon.Models.Producto
@{
    ViewData["Title"] = "Agregar Producto";
}
<h2>Agregar Producto</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Categor√≠a</label>
        <input asp-for="Categoria" class="form-control" />
    </div>
    <div class="form-group">
        <label>Precio</label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label>Stock</label>
        <input asp-for="Stock" class="form-control" type="number" />
    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>
</form>
