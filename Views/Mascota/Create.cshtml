@model Tarea3Brandon.Models.Mascota
@{
    ViewData["Title"] = "Registrar Mascota";
}
<h2>Registrar Mascota</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Especie</label>
        <input asp-for="Especie" class="form-control" />
        <span asp-validation-for="Especie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Raza</label>
        <input asp-for="Raza" class="form-control" />
    </div>
    <div class="form-group">
        <label>Edad</label>
        <input asp-for="Edad" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Propietario</label>
        <input asp-for="Propietario" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>
